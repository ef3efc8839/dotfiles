#!/bin/sh

path_st="/home/sedative/.local/repository/st"
path_dwm="/home/sedative/.local/repository/dwm"
path_dmenu="/home/sedative/.local/repository/dmenu"

# Recompile st
mv "$path_st/config.h" "$path_st/config.h.bak"
(cd "$path_st" && make clean install)

# Recompile dwm
mv "$path_dwm/config.h" "$path_dwm/config.h.bak"
(cd "$path_dwm" && make clean install)

# Recompile dmenu
mv "$path_dmenu/config.h" "$path_dmenu/config.h.bak"
(cd "$path_dmenu" && make clean install)

